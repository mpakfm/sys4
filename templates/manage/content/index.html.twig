{% extends 'manage/base.html.twig' %}

{% block title %}Контент. Блоки.{% endblock %}
{% block page_script %}
    <script src="js/list.dashboard.js"></script>
{% endblock %}

{% block breadcrumb %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb  mb-0 pb-1 pt-1 me-sm-6 me-5">
            <li class="breadcrumb-item text-sm"><a class="opacity-5 " href="/manage/">Панель</a></li>
            <li class="breadcrumb-item text-sm active" aria-current="page">Контент. Блоки.</li>
        </ol>
    </nav>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4 p-md-4 p-sm-2">
                {# шапка с фильтром #}
                <div class="row">
                    <form id="list-search" action="/manage/statistic" method="get">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="example-text-input" class="form-control-label">Поиск и фильтр</label>
                                <input class="form-control" name="query" type="text" value="{{ query }}" autocomplete="off">
                                <div id="query-delete"><i class="far fa-times-circle"></i></div>
                            </div>
                            <div id="list-filter" class="container max-width-500 body-left">
                                <div class="card">
                                    <div class="card-body">
                                        {% for key, item in fields %}
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label for="filter_{{ key }}" class="form-control-label">{{ key }}</label>
                                                        <input id="filter_{{ key }}" class="form-control" type="text" name="{{ key }}" value="{{ attribute(filter, key) is defined ? attribute(filter, key) : '' }}">
                                                    </div>
                                                </div>
                                            </div>
                                        {% endfor %}
                                        <div class="row">
                                            <div class="col col-md-4 align-self-start">
                                                <div class="form-group">
                                                    <input class="form-control max-width-100" type="reset" value="Очистить">
                                                </div>
                                            </div>
                                            <div class="col col-md-5"></div>
                                            <div class="col col-md-3 align-self-end">
                                                <div class="form-group">
                                                    <input class="form-control max-width-100" type="submit" value="Найти">
                                                </div>
                                            </div>
                                        </div>
                                        {#
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label for="filter_client_id" class="form-control-label">client_id</label>
                                                    <input id="filter_client_id" class="form-control" type="text" name="client_id" value="{{ filter.client_id }}">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label for="filter_user_id" class="form-control-label">user_id</label>
                                                    <input id="filter_user_id" class="form-control" type="text" name="user_id" value="{{ filter.user_id }}">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group flatpickr">
                                                    <label for="filter_date_time" class="form-control-label">date_time</label>
                                                    <input id="filter_date_time" data-input autocomplete="off" class="form-control" type="text" name="date_time" value="{% if filter.date_time %}{{ filter.date_time|date('d.m.Y') }}{% endif %}">
                                                    <a class="input-button" title="toggle" data-toggle>
                                                        <i class="icon-calendar"></i>
                                                    </a>
                                                    <a class="input-button" title="clear" data-clear>
                                                        <i class="icon-close"></i>
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label for="filter_ping" class="form-control-label">ping</label>
                                                    <select id="filter_ping" class="form-control " name="ping">
                                                        <option value="" {% if not filter.ping %}selected{% endif %}> -- неважно -- </option>
                                                        <option value="1" {% if filter.ping == 1 %}selected{% endif %}> да </option>
                                                        <option value="0" {% if filter.ping == 0 %}selected{% endif %}> нет </option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        #}
                                    </div>
                                </div>
                                <div id="list-filter-close"><i class="far fa-times-circle"></i></div>
                            </div>
                        </div>
                    </form>
                </div>

                {# таблица со списком элементов #}
                <div class="row">
                    <div class="col-12">
                        <div class="card mb-4">
                            <div class="row">
                                <div class="card-header pb-0 col-10">
                                    <h6>Блоки с контентом</h6>
                                </div>
                                <div class="card-header col-2">
                                    <a href="/manage/content/block/create"><button type="button" class="btn btn-info btn-sm mb-0">Создать</button></a>
                                </div>
                            </div>
                            <div class="card">
                                <div class="table-responsive">
                                    <form action="#" method="post">
                                        <table class="table align-items-center mb-0 js-list">
                                            <thead>
                                            <tr>
                                                <th class="opacity-7 ps-2 w-1"></th>
                                                <th class="opacity-7 ps-2 w-10"></th>
                                                <th class="opacity-7 ps-2 w-1"></th>
                                                <th class="cell-order js-order text-uppercase text-left text-secondary text-xxs font-weight-bolder opacity-7 ps-4"
                                                    data-sort="id"
                                                    data-order="{% if sort == 'id' and order == 'asc' %}desc{% elseif sort == 'id' and order == 'desc' %}asc{% else %}{% endif %}">
                                                    id
                                                    <span><i class="fas {% if sort == 'id' and order == 'asc' %}fa-sort-up{% elseif sort == 'id' and order == 'desc' %}fa-sort-down{% else %}fa-sort{% endif %}"></i></span>
                                                </th>
                                                <th class="cell-order js-order text-uppercase text-left text-secondary text-xxs font-weight-bolder opacity-7 ps-2"
                                                    data-sort="name"
                                                    data-order="{% if sort == 'name' and order == 'asc' %}desc{% elseif sort == 'name' and order == 'desc' %}asc{% else %}{% endif %}">
                                                    name
                                                    <span><i class="fas {% if sort == 'name' and order == 'asc' %}fa-sort-up{% elseif sort == 'name' and order == 'desc' %}fa-sort-down{% else %}fa-sort{% endif %}"></i></span>
                                                </th>
                                                <th class="cell-order js-order text-uppercase text-left text-secondary text-xxs font-weight-bolder opacity-7 ps-2"
                                                    data-sort="code"
                                                    data-order="{% if sort == 'code' and order == 'asc' %}desc{% elseif sort == 'code' and order == 'desc' %}asc{% else %}{% endif %}">
                                                    code
                                                    <span><i class="fas {% if sort == 'code' and order == 'asc' %}fa-sort-up{% elseif sort == 'code' and order == 'desc' %}fa-sort-down{% else %}fa-sort{% endif %}"></i></span>
                                                </th>
                                                <th class="cell-order js-order text-uppercase text-left text-secondary text-xxs font-weight-bolder opacity-7 ps-2"
                                                    data-sort="dt_create"
                                                    data-order="{% if sort == 'dt_create' and order == 'asc' %}desc{% elseif sort == 'dt_create' and order == 'desc' %}asc{% else %}{% endif %}">
                                                    dt_create
                                                    <span><i class="fas {% if sort == 'dt_create' and order == 'asc' %}fa-sort-up{% elseif sort == 'dt_create' and order == 'desc' %}fa-sort-down{% else %}fa-sort{% endif %}"></i></span>
                                                </th>
                                                <th class="cell-order js-order text-uppercase text-left text-secondary text-xxs font-weight-bolder opacity-7 ps-2"
                                                    data-sort="dt_update"
                                                    data-order="{% if sort == 'dt_update' and order == 'asc' %}desc{% elseif sort == 'dt_update' and order == 'desc' %}asc{% else %}{% endif %}">
                                                    dt_update
                                                    <span><i class="fas {% if sort == 'dt_update' and order == 'asc' %}fa-sort-up{% elseif sort == 'dt_update' and order == 'desc' %}fa-sort-down{% else %}fa-sort{% endif %}"></i></span>
                                                </th>
                                                <th class="cell-order js-order text-uppercase text-left text-secondary text-xxs font-weight-bolder opacity-7 ps-2"
                                                    data-sort="user_create"
                                                    data-order="{% if sort == 'user_create' and order == 'asc' %}desc{% elseif sort == 'user_create' and order == 'desc' %}asc{% else %}{% endif %}">
                                                    user_create
                                                    <span><i class="fas {% if sort == 'user_create' and order == 'asc' %}fa-sort-up{% elseif sort == 'user_create' and order == 'desc' %}fa-sort-down{% else %}fa-sort{% endif %}"></i></span>
                                                </th>
                                                <th class="cell-order js-order text-uppercase text-left text-secondary text-xxs font-weight-bolder opacity-7 ps-2"
                                                    data-sort="user_update"
                                                    data-order="{% if sort == 'user_update' and order == 'asc' %}desc{% elseif sort == 'user_update' and order == 'desc' %}asc{% else %}{% endif %}">
                                                    user_update
                                                    <span><i class="fas {% if sort == 'user_update' and order == 'asc' %}fa-sort-up{% elseif sort == 'user_update' and order == 'desc' %}fa-sort-down{% else %}fa-sort{% endif %}"></i></span>
                                                </th>
                                                <th class="cell-order js-order text-uppercase text-left text-secondary text-xxs font-weight-bolder opacity-7 ps-2"
                                                    data-sort="active"
                                                    data-order="{% if sort == 'active' and order == 'asc' %}desc{% elseif sort == 'active' and order == 'desc' %}asc{% else %}{% endif %}">
                                                    active
                                                    <span><i class="fas {% if sort == 'active' and order == 'asc' %}fa-sort-up{% elseif sort == 'active' and order == 'desc' %}fa-sort-down{% else %}fa-sort{% endif %}"></i></span>
                                                </th>
                                                <th class="cell-order js-order text-uppercase text-left text-secondary text-xxs font-weight-bolder opacity-7 ps-2"
                                                    data-sort="sort"
                                                    data-order="{% if sort == 'sort' and order == 'asc' %}desc{% elseif sort == 'sort' and order == 'desc' %}asc{% else %}{% endif %}">
                                                    sort
                                                    <span><i class="fas {% if sort == 'sort' and order == 'asc' %}fa-sort-up{% elseif sort == 'sort' and order == 'desc' %}fa-sort-down{% else %}fa-sort{% endif %}"></i></span>
                                                </th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            {% if elements|length > 0 %}
                                            {% for item in elements %}
                                                <tr data-id="{{ item.id }}">
                                                    <td class="align-middle">
                                                        <span class="text-xs text-secondary mb-0">#{{ loop.index }}</span>
                                                    </td>
                                                    <td class="align-middle">
                                                        <button type="button" class="btn btn-danger btn-sm mb-0 js-delete-el" data-link="/manage/content/block/delete/" data-id="{{ item.id }}">Удалить</button>
                                                        <button type="button" class="btn btn-warning btn-sm mb-0 js-edit-el"  data-link="/manage/content/block/edit/" data-id="{{ item.id }}">Править</button>
                                                    </td>
                                                    <td class="align-middle">
                                                        <div class=" form-check form-check-info text-start">
                                                            <input type="checkbox" class="form-check-input js-select-el" data-id="{{ item.id }}">
                                                        </div>
                                                    </td>
                                                    <td class="align-middle text-left ps-4">
                                                        <span class="text-secondary text-xs font-weight-bold">{{ item.id }}</span>
                                                    </td>
                                                    <td class="align-middle text-left">
                                                        <span class="text-primary text-sm">{{ item.name }}</span>
                                                    </td>
                                                    <td class="align-middle text-left">
                                                        <span class="text-primary text-sm">{{ item.code }}</span>
                                                    </td>
                                                    <td class="align-middle text-left">
                                                        <span class="text-primary text-sm">{{ item.dtCreate|date('d.m H:i') }}</span>
                                                    </td>
                                                    <td class="align-middle text-left">
                                                        <span class="text-primary text-sm">{{ item.dtUpdate|date('d.m H:i') }}</span>
                                                    </td>
                                                    <td class="align-middle text-left">
                                                        <span class="text-primary text-sm">{{ item.userCreate }}</span>
                                                    </td>
                                                    <td class="align-middle text-left">
                                                        <span class="text-primary text-sm">{{ item.userUpdate }}</span>
                                                    </td>
                                                    <td class="align-middle text-left">
                                                        <span class="text-primary text-sm">{{ item.active }}</span>
                                                    </td>
                                                    <td class="align-middle text-left">
                                                        <span class="text-primary text-sm">{{ item.sort }}</span>
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                            {% else %}
                                                <tr>
                                                    <td colspan="12" class="text-center"> -- Нет записей -- </td>
                                                </tr>
                                            {% endif %}
                                            </tbody>
                                            <tfoot>
                                            {% if elements|length > 0 %}
                                            <tr>
                                                <td></td>
                                                <td class="text-right text-secondary text-lg font-weight-bolder opacity-7 ps-4 select-action-all-type">
                                                    <select id="js-select-all-type" class="form-select">
                                                        <option value="all">Выбрать всех</option>
                                                        <option value="invert">Инвертировать</option>
                                                    </select>
                                                </td>
                                                <td class="align-middle">
                                                    <div class="select-action-all">
                                                        <div class="form-check form-check-info text-start" style="display: flow">
                                                            <input type="checkbox" class="form-check-input js-select-all">
                                                        </div>
                                                    </div>
                                                </td>
                                                <td colspan="10">
                                                    <div class="row m-0">
                                                        <div class="col-2 ">
                                                            <select id="js-select-all-action" class="form-select">
                                                                <option selected value="no"> -- действие -- </option>
                                                                <option value="delete" data-url="/manage/content/block/delete_bulk"> удалить </option>
                                                            </select>
                                                        </div>
                                                        <div class="col-1 paginator">
                                                            {% if counter.previewPage %}
                                                                <a href="{{ counter.previewPage.url }}"><span>Назад</span></a>
                                                            {% endif %}
                                                        </div>
                                                        <div class="col-3 paginator">
                                                            {% if counter.pages|length %}
                                                                <p class="text-secondary mb-0">
                                                                    Страницы:
                                                                    {% for item in counter.pages %}
                                                                        {% if item.url %}
                                                                            <a href="{{ item.url }}"><span class="{% if item.current %}current-page{% endif %}">{{ item.page }}</span></a>
                                                                        {% else %}
                                                                            <span class="{% if item.current %}current-page{% endif %}">{{ item.page }}</span>
                                                                        {% endif %}
                                                                        <!--and item.page != '...'-->
                                                                        {% if not loop.last  %}
                                                                            |
                                                                        {% endif %}
                                                                    {% endfor %}
                                                                </p>
                                                            {% endif %}
                                                        </div>
                                                        <div class="col-1 paginator">
                                                            {% if counter.nextPage %}
                                                                <a href="{{ counter.nextPage.url }}"><span>Вперёд</span></a>
                                                            {% endif %}
                                                        </div>
                                                        <div class="col-4 text-right">
                                                            <select id="js-on-page-selector" class="form-select on-page-selector">
                                                                <option value="5" {% if counter.limit == 5 %}selected{% endif %}> -- 5 на страницу -- </option>
                                                                <option value="10" {% if counter.limit == 10 %}selected{% endif %}> -- 10 на страницу -- </option>
                                                                <option value="20" {% if counter.limit == 20 %}selected{% endif %}> -- 20 на страницу -- </option>
                                                                <option value="50" {% if counter.limit == 50 %}selected{% endif %}> -- 50 на страницу -- </option>
                                                                <option value="100" {% if counter.limit == 100 %}selected{% endif %}> -- 100 на страницу -- </option>
                                                                <option value="0" {% if counter.limit == 0 %}selected{% endif %}> -- все -- </option>
                                                            </select>
                                                        </div>
                                                        <div class="col-1 ps-4 text-right">
                                                            {{ counter.pageItems }} из {{ counter.allItems }}
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                            {% else %}
                                                <tr>
                                                    <td colspan="12"> </td>
                                                </tr>
                                            {% endif %}
                                            </tfoot>
                                        </table>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
